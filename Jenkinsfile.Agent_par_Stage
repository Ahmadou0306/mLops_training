pipeline {
    agent none  // â† Pas d'agent global
    
    stages {
        stage('Build Backend') {
            agent {
                docker { image 'maven:3.8-openjdk-11' }  // Java
            }
            steps {
                sh 'mvn clean package'
            }
        }
        
        stage('Build Frontend') {
            agent {
                docker { image 'node:18' }  // Node.js
            }
            steps {
                sh 'npm ci && npm run build'
            }
        }
        
        stage('Test E2E') {
            agent {
                docker { image 'cypress/included:12.0.0' }  // Cypress
            }
            steps {
                sh 'cypress run'
            }
        }
    }
}